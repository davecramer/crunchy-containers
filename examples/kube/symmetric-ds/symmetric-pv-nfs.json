{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "$CCP_NAMESPACE-symmetric-engines",
        "labels": {
            "name": "$CCP_NAMESPACE-symmetric-ds"
        }
    },
    "spec": {
        "capacity": {
            "storage": "50M"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "nfs": {
            "path": "$CCP_STORAGE_PATH/$CCP_NAMESPACE-symmetric",
	    "server": "$CCP_NFS_IP"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

