{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "$CCP_NAMESPACE-symmetric-secondary-engines",
        "labels": {
            "name": "$CCP_NAMESPACE-symmetric-secondary-ds"
        }
    },
    "spec": {
        "capacity": {
            "storage": "50M"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "nfs": {
	    "path": "$CCP_STORAGE_PATH/$CCP_NAMESPACE-symmetric-secondary",
	    "server": "$CCP_NFS_IP"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
