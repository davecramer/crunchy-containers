{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "$CCP_NAMESPACE-symmetric-engines",
        "labels": {
            "name": "$CCP_NAMESPACE-symmetric-ds"
        }
    },
    "spec": {
        "capacity": {
            "storage": "50M"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH/$CCP_NAMESPACE-symmetric-ds"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "$CCP_NAMESPACE-symmetric-secondary-engines",
        "labels": {
            "name": "$CCP_NAMESPACE-symmetric-secondary-ds"
        }
    },
    "spec": {
        "capacity": {
            "storage": "50M"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH/$CCP_NAMESPACE-symmetric-secondary-ds"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
